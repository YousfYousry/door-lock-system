<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextHint" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/solidDarkCircle</item>
        <item name="android:textColorHint">@color/grey_font</item>
        <item name="colorControlNormal">@color/solidDarkCircle</item>
        <item name="colorControlActivated">@color/solidDarkCircle</item>
        <item name="colorControlHighlight">@color/solidDarkCircle</item>
    </style>

</resources>
